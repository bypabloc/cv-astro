# Path: api/Dockerfile.test

FROM oven/bun:1.0.9-slim

# Establecer el directorio de trabajo
WORKDIR /usr/src/app

# Copiar los archivos package.json y bun.lockb al contenedor
COPY package*.json bun.lockb ./

# Instalar las dependencias de la aplicaci√≥n
RUN bun install

# Copiar los archivos del proyecto
COPY . .

# Comando por defecto a ejecutar cuando se inicia el contenedor
CMD [ "bun", "run", "dev" ]

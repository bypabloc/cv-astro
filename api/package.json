{
  "name": "api",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "start:dev": "bun run --hot ./src/index.ts",
    "start:dev:watch": "bun run --watch ./src/index.ts",
    "test:watch": "watchexec --watch src --watch test --exts ts -- bun test",
    "test": "bun test --watch",
    "lint": "eslint . --ext .ts",
    "bun:reinstall": "rm -rf .bun_cache/ node_modules/ && rm -rf bun.lockb && bun install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bun-types": "^1.0.14",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "hono": "^3.10.2",
    "mongoose": "8.0.1",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "bunx prettier --write",
      "git add"
    ]
  }
}
